<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Results</title>
</head>
<body>
    <h1>Results</h1>

    <h2>Uploaded Data</h2>
    <table>
        <thead>
            <tr>
                <% Object.keys(data[0]).forEach(column => { %>
                    <th><%= column %></th>
                <% }); %>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(row => { %>
                <tr>
                    <% Object.values(row).forEach(value => { %>
                        <td><%= value %></td>
                    <% }); %>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <% if (stats && Object.keys(stats).length > 0) { %> <!-- Check if stats is defined and not empty -->
        <h2>Statistics</h2>
        <table>
            <thead>
                <tr>
                    <th>Column</th>
                    <th>Sum</th>
                    <th>Mean</th>
                    <th>Median</th>
                    <th>Mode</th>
                </tr>
            </thead>
            <tbody>
                <% Object.keys(stats).forEach(column => { %>
                    <tr>
                        <td><%= column %></td>
                        <td><%= stats[column].sum.toFixed(2) %></td>
                        <td><%= stats[column].mean.toFixed(2) %></td>
                        <td><%= stats[column].median.toFixed(2) %></td>
                        <td><%= stats[column].mode %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No statistics available. Please make sure to select the calculation options.</p>
    <% } %>

    <a href="/">Upload Another File</a>
    <a href="/options">Visualize Data</a>
</body>
</html>
